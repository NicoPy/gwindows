-- This is the GNAT / GNAT Programming Studio (GPS) project file for
-- testing some components of the GWindows framework, or some contributed packages.
--
-- Build me with "gnatmake -P gwindows_test", or open me with GPS

with "GWindows.gpr";

project GWindows_Test is

   for Source_Dirs use ("test");
   for Object_Dir use "obj";
   for Exec_Dir use "test";   
   
   package Compiler is
      for Default_Switches ("ada") use ("-Os", "-g", "-gnat05", "-gnatweaKM", "-gnatyaAbcefhiklmnprtux");
   end Compiler;

   for Main use (
      "test_clipboard.adb",
      "test_locale.adb",
      "test_system_tray.adb",
      "test_taskbar.adb",
      "test_up_down.adb",
      "drag_drop_ole.adb"
   );

   package Linker is
      -- Get the Windows Visual Styles switched on through manifest.xml:
      for Default_Switches ("ada") use ("contrib/test/visual_styles.rbj"); 
   end Linker;
   
   package Binder is
      for Default_Switches ("ada") use ("-E");
   end Binder;

   package Builder is
      --   "If -j0 is used, then the maximum number of simultaneous compilation
      --    jobs is the number of core processors on the platform."
      for Default_Switches ("ada") use ("-j0");
   end Builder;
   
end GWindows_Test;